# NPM Security Configuration
# Based on security best practices to prevent malicious package installation

# Use exact versions only (no ^ or ~)
save-exact=true

# Enable audit level enforcement
audit-level=moderate

# Restrict to official npm registry only
registry=https://registry.npmjs.org/

# Enable package integrity verification
package-lock=true

# Don't automatically run scripts from packages
ignore-scripts=false

# Enable fund messages (to support maintainers)
fund=true

# Lock down package installation to prevent unauthorized packages
# Uncomment in production environments
# offline=true

# Enable security audit on install
audit=true

# Maximum time to wait for network requests
timeout=60000

# Verify SSL certificates
strict-ssl=true